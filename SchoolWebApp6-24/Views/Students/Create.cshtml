@using SchoolWebApp6_24.DTO
@model StudentDTO

@{
    ViewData["Title"] = "Vytvořit studenta";
}

<h1>Přidat nového studenta</h1>
<a asp-action="Index" class="btn btn-secondary">Zpět</a>
<form asp-action="Create" method="post">
<div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FirstName">Jméno</label>
        <input type="text" asp-for="FirstName" class="form-control" />

        <label asp-for="LastName">Příjmení</label>
        <input type="text" asp-for="LastName" class="form-control" />

        <label asp-for="DateOfBirth">Datum narození</label>
        <input type="date" asp-for="DateOfBirth" class="form-control" />
    </div>
    <input type="submit" class="btn btn-success my-2" value="Přidat" />
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}