@using SchoolWebApp6_24.ViewModels
@model AppUser

@{
    ViewData["Title"] = "Upravení údajů o uživateli";
}

<h1>Změna údajů o uživateli</h1>
<a asp-action="Index" class="btn btn-secondary">Zpět</a>
<form asp-action="Update" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="UserName" class="control-label">Uživatelské jméno</label>
        <input asp-for="UserName" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="Password">Heslo</label>
        <input name="Password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary my-2">Uložit změny</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
