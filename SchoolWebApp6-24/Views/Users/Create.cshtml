@using SchoolWebApp6_24.ViewModels
@model UserViewModel

@{
    ViewData["Title"] = "Přidat nového uživatele";
}

<h1>Přidat nového uživatele</h1>
<a asp-action="Index" class="btn btn-secondary">Zpět</a>
<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Uživatelské jméno</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Heslo</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary my-2">Přidat</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
