@using SchoolWebApp6_24.DTO
@model GradeDTO

@{
    ViewData["Title"] = "Vytvořit známku";
}

<div>
    <form asp-action="Create">
        <h4>Přidat známku</h4>
        <a asp-action="Index" class="btn btn-secondary my-2">Zpět</a>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label" asp-for="StudentId"></label>
            <select class="form-control" asp-for="StudentId" asp-items="ViewBag.Students"></select>
            
            <label class="control-label" asp-for="SubjectId" ></label>
            <select class="form-control" asp-for="SubjectId" asp-items="ViewBag.Subjects"></select>
            
            <label>Téma zkoušené látky</label>
            <input type="text" asp-for="Topic" placeholder="Téma zkoušené látky" class="form-control" />
            
            <label>Hodnocení</label>
            <input type="number" asp-for="Mark" min="1" max="5" placeholder="Známka" class="form-control" />
        </div>
        <div>
            <input class="btn btn-success my-2" type="submit" value="Přidat" />
        </div>
    </form>
</div>