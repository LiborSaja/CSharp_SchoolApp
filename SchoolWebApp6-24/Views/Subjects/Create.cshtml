@using SchoolWebApp6_24.DTO
@model SubjectDTO

@{
    ViewData["Title"] = "Přidat nový předmět";
}

<h1>Zařadit do výuky nový předmět</h1>
<a asp-action="Index" class="btn btn-secondary">Zpět</a>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name">Název předmětu</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-success my-2" value="Zařadit" />
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}